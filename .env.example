NODE_ENV=development
PORT=4000
DATABASE_URL="file:./prisma/dev.db"

# Minimum 32 characters
JWT_SECRET="replace-with-a-long-random-jwt-secret-string"
JWT_EXPIRES_IN="7d"
CORS_ORIGIN="http://localhost:3000,http://localhost:5173,http://localhost:8080"

# 32-byte key encoded as 64 hex chars (use: openssl rand -hex 32)
TOKEN_ENCRYPTION_KEY="replace-with-64-char-hex-key"

# Plaid credentials (Sandbox for local development)
PLAID_CLIENT_ID="your-plaid-client-id"
PLAID_SECRET="your-plaid-secret"
PLAID_ENV="sandbox"
PLAID_PRODUCTS="transactions"
PLAID_COUNTRY_CODES="US"
# Optional, mostly required for OAuth institutions
PLAID_REDIRECT_URI=""

# Optional AI advisor integration
OPENAI_API_KEY=""
OPENAI_MODEL="gpt-4o-mini"

